doctype html(lang='en')

mixin card_img(suit, card)
    - var lsuiy = suit.toLowerCase();
    - var letter = suit[0];
    img(src='images/Cards/#{suit}/#{card}#{letter}.svg')&attributes(attributes)


//- Creates a player circle, if the player number is 1 it will make it blue
mixin player_circle(playerNo)
    .player(id='p' + playerNo)
        .no-cards(
            class=         (playerNo === 1 ? 'enabled' : 'button')
            data-toggle=   'modal'
            data-target=   '#cardPicker'
            data-playerid= playerNo
            data-numcards= '2'
        )
            .plus-content: p +
        ul.selected.table-card-set
            li
                +card_img('Clubs', 'A')
                .enabled.plus-content(style='display: none;'): span.glyphicon.glyphicon-plus
            li
                +card_img('Clubs', 'A')(style='display: none;')
                .enabled.plus-content: span.glyphicon.glyphicon-plus

            span.result.label.label-success

head
    title ProPokerTools2 :3

    //- remote scripts
    script(src='//code.jquery.com/jquery-2.1.3.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.2/underscore-min.js')

    link(rel='stylesheet', type='text/css', href='css/vendor/normalize/normalize.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')

    link(rel='stylesheet', type='text/css', href='css/index.css')
    link(rel='stylesheet', type='text/css', href='css/vendor/liteAccordion/liteaccordion.css')

body
    #content
        h1 ProPokerTools2
        #container
            .row
                #table.col-md-9
                    - for (var i = 1; i <= 6; ++i)
                        +player_circle(i)

                    ul#table-cards
                        li#flop.table-card-set
                            ul
                                - for (var i = 0; i < 3; ++i)
                                    li.table-card.enabled(id="f#{i}") +
                        li#turn.table-card-set
                            #t1.button.table-card +

                        li#river.table-card-set
                            #r1.button.table-card +

                #sidebar.col-md-3
                    h2.blue-gradient Output

            #footer.row.col-md-12
                h5 Footer
                button#reset.btn.btn-lg.btn-danger Reset
                button#simulate.btn.btn-lg.btn-success Simulate

        include ./modal.jade

    //- local scripts:
    script(src='js/server.js')
    script(src='js/index.js')
    script(src='js/liteAccordion/liteaccordion.jquery.min.js')
